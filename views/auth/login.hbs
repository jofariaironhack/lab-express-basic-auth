<h2>Login</h2>
<form action="/auth/login" method="POST">
  <label>
    Username:
    <input type="text" name="username" />
  </label>
  <label>
    Password:
    <input type="password" name="password" />
  </label>

  <button type="submit">Login</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}